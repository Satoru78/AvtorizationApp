<Page x:Class="WpfAvtorizationApp.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAvtorizationApp.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">
            <TextBlock Text="Логин:"/>
            <TextBox TextWrapping="Wrap" Height="25" Width="250" Text="{Binding Username }"/>
            <TextBlock Text="Пароль"/>
            <TextBox TextWrapping="Wrap" Height="25" Width="250" Text="{Binding Password}"/>
            <Button Content="Войти" Margin="0,20" Name="LogOutBtn" Click="LogOutBtn_Click"></Button>
            
            <Button Content="Зарегистрироваться" Margin="0,20" Name="RegBtn" Click="RegBtn_Click"></Button>
            
        </StackPanel>
    </Grid>
</Page>
